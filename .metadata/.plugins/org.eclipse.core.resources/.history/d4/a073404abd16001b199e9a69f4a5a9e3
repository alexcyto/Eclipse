package Metodos;

public class SepararCaracteres {

	public static void main(String[] args) {
		
		int num = 456;
		
		String numCadena = Integer.toString(num);
		
		for (int i=0;i<numCadena.length();i++)
			   System.out.println("Caracter " + i + ": " + numCadena.charAt(i));
		
		String palabra = "caracola";
						//metodo que pasa de String a int
	    int numEntero = Integer.parseInt(palabra);
	    
	    String[] dig = palabra.split("");
	    for (int i = 0; i < dig.length; i++) {
	        System.out.println(dig[i]);
	    }

	    }
	    
	    }




