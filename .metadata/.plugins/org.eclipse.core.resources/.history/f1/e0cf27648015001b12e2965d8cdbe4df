package Otros;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class Invento {
public static void main(String[] args) throws IOException {
	
	Scanner sc = new Scanner(System.in);
	System.out.println("Introduce el nombre del archivo que quieres crear + .txt");
	FileWriter f=new FileWriter(new File(sc.next()));
	
	System.out.println("Escribe lo que saldrá en el archivo de texto");
	f.write(sc.next());
	
f.close();
}
}